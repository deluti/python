def sign_in():
    g = 0
    while g < 3:
        a = input("Введите логин:")
        b = input("Введите пароль:")
        if a != 'login' or b != '12345':
            print("неверный логин или пароль")
            g = g + 1
        else:
            print("успешная авторизация!")
            g = 5
            
    if g == 3:
        print("попытки кончились!")
        return 1
 
    
